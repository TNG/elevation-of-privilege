{
  "name": "@eop/server",
  "type": "commonjs",
  "scripts": {
    "build": "rimraf dist *.tsbuildinfo && tsc --build tsconfig.app.json",
    "dev": "cross-env TS_NODE_PROJECT=./tsconfig.app.json node --inspect --watch --unhandled-rejections=warn -r ts-node/register src/main.ts",
    "start": "node --unhandled-rejections=warn build/main.js",
    "test": "jest",
    "lint": "eslint .",
    "fixlint": "eslint . --fix",
    "checkformat": "prettier . --check",
    "format": "prettier . --write"
  },
  "dependencies": {
    "@eop/shared": "*",
    "@koa/cors": "^5.0.0",
    "basic-auth": "^2.0.1",
    "boardgame.io": "^0.50.2",
    "koa": "^2.14.2",
    "koa-body": "^4.2.0",
    "koa-router": "^12.0.1",
    "koa-send": "^5.0.1",
    "node-persist": "^3.1.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eop/eslint-config": "*",
    "@eop/prettier-config": "*",
    "@eop/typescript-config": "*",
    "@types/basic-auth": "^1.1.3",
    "@types/jest": "^29.5.12",
    "@types/koa__cors": "^3.3.0",
    "@types/koa-router": "^7.4.4",
    "@types/koa-send": "^4.1.6",
    "@types/lodash": "^4.17.5",
    "@types/node": "^16.11.26",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.6.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.7",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "ts-toolbelt": "^9.6.0",
    "typescript": "^4.8.4",
    "typescript-eslint": "^8.0.0-alpha.37"
  },
  "private": true
}
