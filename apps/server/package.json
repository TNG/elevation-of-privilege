{
  "name": "@eop/server",
  "type": "commonjs",
  "version": "1.1.0",
  "scripts": {
    "build": "rimraf dist *.tsbuildinfo && tsc --build tsconfig.app.json",
    "dev": "cross-env TS_NODE_PROJECT=./tsconfig.app.json node --inspect --watch --unhandled-rejections=warn -r ts-node/register src/main.ts",
    "start": "node --unhandled-rejections=warn build/main.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "fixlint": "eslint . --fix",
    "checkformat": "prettier . --check",
    "format": "prettier . --write"
  },
  "dependencies": {
    "@eop/shared": "*",
    "@koa/cors": "^5.0.0",
    "basic-auth": "^2.0.1",
    "boardgame.io": "^0.50.2",
    "koa": "^2.14.2",
    "koa-body": "^6.0.1",
    "koa-router": "^12.0.1",
    "koa-send": "^5.0.1",
    "node-persist": "^4.0.3",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@eop/eslint-config": "*",
    "@eop/prettier-config": "*",
    "@eop/typescript-config": "*",
    "@types/basic-auth": "^1.1.3",
    "@types/koa-router": "^7.4.4",
    "@types/koa-send": "^4.1.6",
    "@types/koa__cors": "^5.0.0",
    "@types/lodash": "^4.17.7",
    "@types/node": "^18.19.45",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.9.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "ts-toolbelt": "^9.6.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.2.0",
    "vitest": "^2.0.5"
  },
  "private": true
}
