{
  "name": "@eop/shared",
  "type": "commonjs",
  "version": "1.0.1",
  "main": "./dist/cjs/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "scripts": {
    "build": "rimraf dist *.tsbuildinfo && tsc --build tsconfig.cjs.json && tsc --build tsconfig.esm.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "fixlint": "eslint . --fix",
    "checkformat": "prettier . --check",
    "format": "prettier . --write"
  },
  "dependencies": {
    "boardgame.io": "^0.50.2",
    "lodash": "^4.17.21",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@eop/eslint-config": "*",
    "@eop/prettier-config": "*",
    "@eop/typescript-config": "*",
    "@types/lodash": "^4.17.7",
    "@types/seedrandom": "^3.0.8",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.9.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "seedrandom": "^3.0.5",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.2.0",
    "vitest": "^2.0.5"
  },
  "private": true
}
